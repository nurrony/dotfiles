#remove remote git branches by prefix
git-branch-rm-remote() {
  vared -p "This will remove your remote branches with '$@' prefix. Are you sure? [yn] " -c answer
  if [[ $answer = y ]] ; then
    git branch -r | awk -Forigin/ '/\/'$@'/ {print $2 $3}' | xargs -I {} git push origin :{}
  fi
}

