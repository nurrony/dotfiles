rmp() {
    if [ "$#" -eq 0 ]; then
        echo "Usage: rmp <file_or_directory> ..."
        return 1
    fi

    [[ "$#" -lt 2 ]] && { echo "Usage: cp-progress <source> <destination>"; return 1; }

    # Warn if deleting more than 10 items
    if [ "$#" -gt 10 ]; then
        read -p "You are about to delete $#. Proceed? [y/N] " answer
        case "$answer" in
            [Yy]* ) ;;
            * ) echo "Aborted."; return 1 ;;
        esac
    fi

    # Create timestamped trash folder
    mkdir -p "/tmp/.empty"

    # Loop through all arguments
    for target in "$@"; do
        if [ -e "$target" ]; then
            # Use rsync to sync file/directory to /tmp/.empty
            rsync --recursive --whole-file --info=progress2 --delete "$target" /tmp/.empty/ 2>/dev/null
            # Remove any empty directories left behind
            if [ -d "$target" ]; then
                rm -rf "$target" /tmp/.empty 2>/dev/null
            fi
        else
            echo "Warning: '$target' does not exist"
        fi
    done
}

cpv() {
    [[ $# -lt 2 ]] && { echo "Usage: cp-progress <source> <destination>"; return 1; }
    local src="$1"
    local dest="$2"

    # Detect if destination is remote (user@host:/path)
    if [[ "$dest" == *:* ]]; then
        # Remote transfer: use SSH optimized for speed
        rsync -aH --compress --human-readable --progress --ignore-existing --whole-file --partial -e "ssh -T -o Compression=no" "$src" "$dest"
    else
        # Local transfer: no compression, whole file
        rsync -aH --info=progress2 --human-readable --ignore-existing --whole-file --partial "$src" "$dest"
    fi
}


## Taken from https://github.com/ohmyzsh/ohmyzsh/blob/master/lib/functions.zsh
# take functions

# mkcd is equivalent to takedir
function mkcd takedir() {
  mkdir -p $@ && cd ${@:$#}
}

function takeurl() {
  local data thedir
  data="$(mktemp)"
  curl -L "$1" > "$data"
  tar xf "$data"
  thedir="$(tar tf "$data" | head -n 1)"
  rm "$data"
  cd "$thedir"
}

function takegit() {
  git clone "$1"
  cd "$(basename ${1%%.git})"
}

function take() {
  if [[ $1 =~ ^(https?|ftp).*\.(tar\.(gz|bz2|xz)|tgz)$ ]]; then
    takeurl "$1"
  elif [[ $1 =~ ^([A-Za-z0-9]\+@|https?|git|ssh|ftps?|rsync).*\.git/?$ ]]; then
    takegit "$1"
  else
    takedir "$@"
  fi
}

# install and update MinC (Microshift in Container for Kubernetes cluster)
function update_minc() {
  if [[ $(uname -m) == "arm64" ]]; then
   curl -L -o ~/.local/bin/minc https://github.com/minc-org/minc/releases/latest/download/minc_darwin_arm64
   chmod +x ~/.local/bin/minc && ~/.local/bin/minc completion zsh > $DEV_ZONE_CONFIG_PATH/zinit/_minc
  else
    curl -L -o ~/.local/bin/minc https://github.com/minc-org/minc/releases/latest/download/minc_darwin_amd64
    chmod +x ~/.local/bin/minc && ~/.local/bin/minc completion zsh > $DEV_ZONE_CONFIG_PATH/zinit/_minc
  fi
}



# toggle proxy settings for macos
function toggle_proxy() {
  local PROXY_URL=${1:-$AUTO_PROXY_URL}
  local SERVICE=${2:-"Wi-Fi"}

  if [[ $1 == "--help" ]] || [[ $1 == "-h" ]] || [[ $1 == "help" ]]; then
    echo "Usage: $0 <proxy-url> <service> (defaut: service: Wi-Fi, proxy-url: AUTO_PROXY_URL)"
    return
  fi

  # Get current status
  local AUTO_PROXY_STATUS=$(networksetup -getautoproxyurl "$SERVICE" | grep Enabled | awk '{print $2}')

  echo "Current Auto Proxy status for $SERVICE: $AUTO_PROXY_STATUS"

  if [[ $AUTO_PROXY_STATUS == "Yes" ]]; then
    echo "Disabling Auto Proxy..."
    networksetup -setautoproxystate "$SERVICE" off
    echo "Auto Proxy disabled."
  else
    echo "Enabling Auto Proxy with PAC URL: ${PROXY_URL}"
    networksetup -setautoproxyurl "${SERVICE}" "${PROXY_URL}"
    networksetup -setautoproxystate "${SERVICE}" on
    echo "Auto Proxy enabled."
  fi
  echo "\nFor help pass --help"
}
