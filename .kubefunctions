#!/usr/bin/env bash

function kctx() {
  kubectl-ctx "$1"
}

function kns() {
  kubectl-ns "$1"
}

function k8sgui() {
  kubectl --namespace kubernetes-dashboard create token "${1:-rony}" | pbcopy | echo '=> K8s dashboard token copied to pasteboard.'
  echo " go to http://localhost:8001/api/v1/namespaces/kubernetes-dashboard/services/https:kubernetes-dashboard:/proxy/"
  kubectl proxy
}

function builddevship() {
  k3d cluster create --config $DEV_ZONE/storage/kubernetes/k8s-clusters/k3d-cluster.yml && \
  echo "\ndevship build is completed. Happy sailing!!"
}
