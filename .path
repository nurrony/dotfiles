# cURL Paths
export CURL_PATH=/usr/local/opt/curl-openssl/bin
export PATH="$CURL_PATH:$PATH"

# Android Variables
export ANDROID_HOME=$DEV_ZONE_CONFIG_PATH/android/sdk
export ANDROID_SDK_ROOT=$DEV_ZONE_CONFIG_PATH/android/sdk
export ANDROID_PLATFORM_TOOLS=$ANDROID_HOME/platform-tools
export ANDROID_TOOLS=$ANDROID_HOME/tools
export PATH="$ANDROID_HOME:$ANDROID_PLATFORM_TOOLS:$ANDROID_TOOLS:$PATH"

# Ruby Language Paths
export RVM_PATH="$HOME/.rvm/bin"
export PATH="$RVM_PATH:$PATH" # Add RVM to PATH for scripting

# Golang variables
export GOPATH="$HOME/go"
export PATH="$GOPATH/bin:$PATH"

# Dart Pub global bin path
export DART_PUB_BIN=$HOME/.pub-cache/bin
export FLUTTER_SDK_DIR=$DEV_ZONE_CONFIG_PATH/dartlang/flutter
export PATH="$DART_PUB_BIN:$FLUTTER_SDK_DIR/bin:$PATH"

# Krew path
export KREW_ROOT=${KREW_ROOT:-$HOME/.krew}
export PATH="$KREW_ROOT/bin:$PATH"

# Docker CLI user path
export DOCKER_CLI_BIN_PATH=$HOME/.docker/bin
export PATH="$DOCKER_CLI_BIN_PATH:$PATH"

# GNU Bin Utils path
export GNU_BIN_UTIL_PATH=/usr/local/opt/binutils/bin
export PATH="$GNU_BIN_UTIL_PATH:$PATH"

# GNU Find Utils path
export GNU_FIND_UTIL_PATH=/usr/local/opt/findutils/libexec/gnubin
export PATH="$GNU_FIND_UTIL_PATH:$PATH"

# GNU Core Utils path
export GNU_CORE_UTIL_PATH=/usr/local/opt/coreutils/libexec/gnubin
export PATH="$GNU_CORE_UTIL_PATH:$PATH"

# NeoVim Path
export NEOVIM_MASON_BIN_PATH=$HOME/.local/share/nvim/mason/bin
export PATH="$NEOVIM_MASON_BIN_PATH:$PATH"

# Python v3.x.x path
export PYTHON_BIN_PATH=$(brew --prefix python)/libexec/bin
export PATH="$PYTHON_BIN_PATH:$PATH"

# get latest bison for php
export BISON_BIN_PATH=$(brew --prefix bison)/bin

export PATH="$BISON_BIN_PATH:$PATH"

# Finally apped to main PATH variable
export PATH="/usr/local/bin:/usr/local/sbin:$HOME/.local/bin:$PATH"
