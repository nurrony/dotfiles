# cURL Paths
export CURL_PATH=/usr/local/opt/curl-openssl/bin
export PATH="$CURL_PATH:$PATH"

# Android Variables
export ANDROID_HOME=$DEV_DIR/storage/android/sdk
export ANDROID_SDK_ROOT=$DEV_DIR/storage/android/sdk
export ANDROID_PLATFORM_TOOLS=$ANDROID_HOME/platform-tools
export ANDROID_TOOLS=$ANDROID_HOME/tools
export PATH="$ANDROID_HOME:$ANDROID_PLATFORM_TOOLS:$ANDROID_TOOLS:$PATH"

# Ruby Language Paths
export RVM_PATH="$HOME/.rvm/bin"
export PATH="$RVM_PATH:$PATH" # Add RVM to PATH for scripting

# Golang variables
export GOPATH="$HOME/.go"
export PATH=$GOPATH/bin:$PATH

# Dart Pub global bin path
export DART_PUB_BIN=$HOME/.pub-cache/bin
export FLUTTER_SDK_DIR=$DEV_DIR/storage/dartlang/flutter
export PATH="$DART_PUB_BIN:$FLUTTER_SDK_DIR/bin:$PATH"

# GNU Tools path
export GNU_TOOL_PATH=/usr/local/opt/findutils/libexec/gnubin
export PATH="$GNU_TOOL_PATH:$PATH"

# GraalVM Paths
# export GRAALVM_BIN_PATH="/Library/Java/JavaVirtualMachines/graalvm-ce-19.2.0/Contents/Home/bin"
# export PATH="$GRAALVM_BIN_PATH:$PATH"

export PATH="/usr/local/sbin:$PATH"
